%div{:class => "well span10 offset1"}
  =styled_flash
  %form{:action => "/user/authenticate", :method => "post", :class => "form-horizontal"}
    %fieldset
      %div{:id => "legend"}
        %legend{:class => ""}Login
      %div{:class => "control-group"}
        %label{:class => "control-label", :for => "email"}Email address
        %div{:class => "controls"}
          %input{:type => "email", :name => "email", :placeholder => "", :class => "input-xlarge"}
      %div{:class => "control-group"}
        %div{:class => "controls"}
          %button{:class => "btn btn-success"}Login
      %div{:class => "control-group"}
        %div{:class => "controls"}
          %a{:href => "/signup"}Create an account
